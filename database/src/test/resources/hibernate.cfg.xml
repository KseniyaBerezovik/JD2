    <mapping class="by.itacademy.entity.userEntity.Admin"/>
    <mapping class="by.itacademy.entity.userEntity.Client"/>
    <mapping class="by.itacademy.entity.userEntity.Employee"/>
    <mapping class="by.itacademy.entity.userEntity.User"/>

    <mapping class="by.itacademy.entity.Address"/>
    <mapping class="by.itacademy.entity.BaseEntity"/>
    <mapping class="by.itacademy.entity.Message"/>
    <mapping class="by.itacademy.entity.Promotion"/>
    <mapping class="by.itacademy.entity.Review"/>
